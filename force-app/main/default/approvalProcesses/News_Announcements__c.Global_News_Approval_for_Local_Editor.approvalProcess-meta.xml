<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Content__c</field>
        <field>Title__c</field>
        <field>Local_News_Category__c</field>
        <field>RecordType</field>
        <field>Subtopic__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Global_Approval_Record_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Global_New_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>sysGlobalNews</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>christoph.hoelzl2@seg-automotive.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>emilie.nicolas@seg-automotive.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>franziska.koch@seg-automotive.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Global Approver 1</label>
        <name>Global_Approver_1</name>
        <rejectionActions>
            <action>
                <name>Global_Approval_Record_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>07/06/2018: This is generation approval when Local News Editor created Global news.</description>
    <emailTemplate>unfiled$public/Notification_for_Global_News_user_when_assigned_for_approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND ( 4 OR 5 )</booleanFilter>
        <criteriaItems>
            <field>News_Announcements__c.RecordType</field>
            <operation>equals</operation>
            <value>Global News</value>
        </criteriaItems>
        <criteriaItems>
            <field>News_Announcements__c.sysNewsInsert__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>News_Announcements__c.Content__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>News_Announcements__c.isAttachmentAFile__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>News_Announcements__c.isAttachmentAFile__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Global_Approval_Record_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approved_DateTime_field</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_recordtype_to_GlobalNewsApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_sysglboal_value_to_true</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_sysNewsInsert</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Global_Approval_Record_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Global News Approval for Local Editor</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
