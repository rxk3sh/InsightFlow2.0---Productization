<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IFv2_IFE_AttachmentValidation_2</fullName>
    <active>false</active>
    <errorConditionFormula>AND( 
Workflow__c = $Label.CLIFv20301 , 
OR(ISPICKVAL(RequestExtension3__r.PFMEA_Created_Updated__c, &apos;Yes&apos;), 
			ISPICKVAL(RequestExtension3__r.Control_Plan_Created_Updated__c, &apos;Yes&apos;)),
(FileCount__c &lt; 2)
)</errorConditionFormula>
    <errorMessage>Add at least 2 attachments if &apos;Yes&apos; is selected in either &apos;PFMEA Created/Updated&apos;  or  &apos;Control Plan Created/Updated&apos; field</errorMessage>
</ValidationRule>
