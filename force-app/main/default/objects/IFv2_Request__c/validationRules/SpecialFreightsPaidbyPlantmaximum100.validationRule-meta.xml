<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SpecialFreightsPaidbyPlantmaximum100</fullName>
    <active>true</active>
    <description>This is fired when paid by plant is greater than 100 %.</description>
    <errorConditionFormula>and 
(
 Workflow__c =  $CustomMetadata.IFv2_Workflows__mdt.ApprovalProcessforSpecialFreights.Name__c  ,
ispickval ( Status__c, &apos;Draft&apos;) ,
  PaidbyPlant__c  &gt; 1

)</errorConditionFormula>
    <errorMessage>Paid by Plant cannot exceed 100%</errorMessage>
</ValidationRule>
