<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OnlyNumber</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Customer_Code__c)),
				NOT(  ISNUMBER(Customer_Code__c) )
    )</errorConditionFormula>
    <errorDisplayField>Customer_Code__c</errorDisplayField>
    <errorMessage>Customer Code should be in numbers.</errorMessage>
</ValidationRule>
